<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900" media="all">
    <link rel="icon" type="image/png" href="images/favicon.png">
    <title>BAR - Leaderboards</title>
</head>

<body>
    <div class="leaderboard-container">
        <% 
            for (const leaderboard of leaderboards) {
                const players = leaderboard.players;
        %>
            <div class="leaderboard">
                <h2><%= leaderboard.gameType %></h2>
                <div class="row row--header">
                    <div class="row__rank">Rank</div>
                    <div class="row__name">Name</div>
                    <div class="row__trueskill">TS</div>
                </div>
                <% players.forEach((player, i) => { %>
                    <div class="row">
                        <div class="row__rank"><%= i + 1 %></div>
                        <div class="row__name"><%= player.name %></div>
                        <div class="row__trueskill"><%= player.trustedSkill.toFixed(2) %></div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>